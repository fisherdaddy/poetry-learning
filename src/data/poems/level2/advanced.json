{
  "poems": [
    {
      "id": "2-6",
      "title": "望洞庭",
      "author": "刘禹锡",
      "dynasty": "唐",
      "content": ["湖光秋月两相和，", "潭面无风镜未磨。", "遥望洞庭山水色，", "白银盘里一青螺。"],
      "tags": ["山水", "秋景", "意境"]
    },
    {
      "id": "2-7",
      "title": "夜书所见",
      "author": "叶绍翁",
      "dynasty": "宋",
      "content": ["萧萧梧叶送寒声，", "江上秋风动客情。", "知有儿童挑促织，", "夜深篱落一灯明。"],
      "tags": ["秋夜", "思乡", "生活"]
    },
    {
      "id": "2-8",
      "title": "清明",
      "author": "杜牧",
      "dynasty": "唐",
      "content": ["清明时节雨纷纷，", "路上行人欲断魂。", "借问酒家何处有，", "牧童遥指杏花村。"],
      "tags": ["清明", "春雨", "行旅"]
    },
    {
      "id": "2-9",
      "title": "游山西村",
      "author": "陆游",
      "dynasty": "宋",
      "content": ["莫笑��家腊酒浑，", "丰年留客足鸡豚。", "山重水复疑无路，", "柳暗花明又一村。"],
      "tags": ["田园", "生活", "乐观"]
    },
    {
      "id": "2-10",
      "title": "示儿",
      "author": "陆游",
      "dynasty": "宋",
      "content": ["死去原知万事空，", "但悲不见九州同。", "王师北定中原日，", "家祭无忘告乃翁。"],
      "tags": ["爱国", "教育", "家国"]
    }
  ]
} 