{
  "poems": [
    {
      "id": "1-6",
      "title": "登鹳雀楼",
      "author": "王之涣",
      "dynasty": "唐",
      "content": ["白日依山尽，", "黄河入海流。", "欲穷千里目，", "更上一层楼。"],
      "tags": ["登高", "写景", "壮志"]
    },
    {
      "id": "1-7",
      "title": "赋得古原草送别",
      "author": "白居易",
      "dynasty": "唐",
      "content": ["离离原上草，", "一岁一枯荣。", "野火烧不尽，", "春风吹又生。"],
      "tags": ["生命力", "草", "送别"]
    },
    {
      "id": "1-8",
      "title": "江雪",
      "author": "柳宗元",
      "dynasty": "唐",
      "content": ["千山鸟飞绝，", "万径人踪灭。", "孤舟蓑笠翁，", "独钓寒江雪。"],
      "tags": ["冬天", "雪景", "意境"]
    },
    {
      "id": "1-9",
      "title": "寻隐者不遇",
      "author": "贾岛",
      "dynasty": "唐",
      "content": ["松下问童子，", "言师采药去。", "只在此山中，", "云深不知处。"],
      "tags": ["隐士", "山林", "问路"]
    },
    {
      "id": "1-10",
      "title": "池上",
      "author": "白居易",
      "dynasty": "唐",
      "content": ["小娃撑小艇，", "偷采白莲回。", "不解藏踪迹，", "浮萍一道开。"],
      "tags": ["童趣", "生活", "趣事"]
    }
  ]
} 